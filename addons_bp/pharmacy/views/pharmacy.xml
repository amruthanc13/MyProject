<?xml version = "1.0" encoding = "utf-8"?>
<odoo >
        <record id="patient_form_inherit" model="ir.ui.view">
            <field name="name">pharmacy.patient.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="website" position="replace"/>
                <field name="vat" position="replace"/>
                <field name="function" position="replace"/>
                <field name="category_id" position="replace"/>
                <field name="title" position="before">
                    <field name="insurance_no"/> 
                </field>
                    <page name="contact_addresses" position="before">
                        <page name="patient_clinical_history" string="Clinical History" autofocus="autofocus">
                            <field name="clinical_history">
                                <tree editable="bottom">
                                    <field name="date"/> 
                                    <field name="diseases" widget="many2many_tags"/>     
                                </tree>  
                            </field>
                        </page>    
                    </page> 
            </field>
        </record>

        <record id="patient_tree_inherit" model="ir.ui.view">
            <field name="name">pharmacy.patient.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="replace"/>
                <field name="email" position="after">
                    <field name="insurance_no"/> 
                </field>
            </field>
        </record>

        <record id="pharmacy_patient_search_form_view" model="ir.ui.view">
            <field name="name">pharmacy.patient.search.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="insurance_no" string="Insurance No."/>
                    <filter string="Patients with Insurance No." name='insurance_no_filter' domain="[('insurance_no','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="disease_details_form" model="ir.ui.view">
            <field name="name">pharmacy.disease.details.form</field>
            <field name="model">pharmacy.disease.details</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="code" default_focus="1" placeholder="Code"/>
                                <field name="disease_categ"/>
                            </group>
                            <group>
                                <field name="name" placeholder="Name"/>
                                <field name="reaction_medicines" widget="many2many_tags"/>
                            </group>  
                        </group>                     
                    </sheet>
                    </form>
                </field>
            </record>

        <record id="disease_details_tree" model="ir.ui.view">
            <field name="name">pharmacy.disease.details.tree</field>
            <field name="model">pharmacy.disease.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="reaction_medicines" widget="many2many_tags"/>
                    <field name="disease_categ" string="Disease Category" optional="hide"/>
                </tree>
            </field>
        </record>
        
        <record id="disease_details_search" model="ir.ui.view">
            <field name="name">pharmacy.disease.details.search</field>
            <field name="model">pharmacy.disease.details</field>
            <field name="arch" type="xml">
                <search string="Diseases">                   
                    <filter string="Diseases with medicine reaction" name='reaction_medicines' domain="[('reaction_medicines','!=',False)]"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="reaction_medicines"/>
                    <separator/>
                    <group expand="1" string="Group By">
                        <filter string="Disease Category" name="disease_categ" context="{'group_by':'disease_categ'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="clinical_history_form" model="ir.ui.view">
            <field name="name">pharmacy.clinical.history.form</field>
            <field name="model">pharmacy.clinical.history</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" default_focus="1" placeholder="Name"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="diseases" placeholder="Diseases" widget="many2many_tags"/>
                            </group>  
                        </group>                     
                    </sheet>
                    </form>
                </field>
            </record>

        <record id="clinical_history_tree" model="ir.ui.view">
            <field name="name">pharmacy.clinical.history.tree</field>
            <field name="model">pharmacy.clinical.history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="diseases" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="clinical_history_search" model="ir.ui.view">
            <field name="name">pharmacy.clinical.history.search</field>
            <field name="model">pharmacy.clinical.history</field>
            <field name="arch" type="xml">
                <search string="Clinical history">
                    <filter string="Today" name='date_today' 
                    domain="[('date','&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('date','&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                    <filter string="Last ten days" name='date_last_ten_days' 
                    domain="[('date','&gt;=', (context_today() - datetime.timedelta(days=10)).strftime('%Y-%m-%d 00:00:00')),('date','&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="diseases"/>
                    <separator/>
                    <group expand="1" string="Group By">
                        <filter string="Patient" name="name" context="{'group_by':'name'}"/>
                        <filter string="Date" name="date" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="pharmacy_clinical_history_calendar_view">
            <field name="name">pharmacy.clinical.history.calendar.view</field>
            <field name="model">pharmacy.clinical.history</field>
            <field name="arch" type="xml">
                <calendar string="Clinical history calendar" mode="month" date_start="date" quick_add="False" color="name" hide_time="true">
                    <field name="name" filters="1"/>
                    <field name="diseases" widget="many2many_tags"/>
                </calendar>
            </field>
        </record>

        <record id="pharmacy_product_search_form_view" model="ir.ui.view">
            <field name="name">pharmacy.product.product.search.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="medicine_code" string="International drug code"/>
                    <filter string="With international drug code" name='medicine_code_filter' domain="[('medicine_code','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="pharmacy_action" model="ir.actions.act_window">
            <field name="name">Pharmacy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.company</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new product
                </p>
            </field>
        </record>
        <record id="disease_details_action" model="ir.actions.act_window">
            <field name="name">Disease Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pharmacy.disease.details</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new disease detail
                </p>
            </field>
        </record>
        <record id="patient_action" model="ir.actions.act_window">
            <field name="name">Patient Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{"search_default_insurance_no_filter":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first patient
                </p>
            </field>
        </record>
        <record id="medicine_action" model="ir.actions.act_window">
            <field name="name">Medicine Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{"search_default_medicine_code_filter":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add medicines
                </p>
            </field>
        </record>

        <record id="pharmacy_sale_action" model="ir.actions.act_window">
            <field name="name">Prescription orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add prescription orders
                </p>
            </field>
        </record>

        <record id="clinical_history_action" model="ir.actions.act_window">
            <field name="name">Clinical History</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pharmacy.clinical.history</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="context">{"search_default_date_last_ten_days":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add clinical history of patients
                </p>
            </field>
        </record>

        <record id="disease_categories_action" model="ir.actions.act_window">
            <field name="name">Disease Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pharmacy.disease.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add disease categories
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem id="pharmacy_root_menu"
            name="Pharmacy"
            web_icon="pharmacy,static/description/icon.png"
            sequence="10"/>

        <menuitem id="pharmacy_pharmacy_root"
            name="Pharmacy"
            parent="pharmacy_root_menu"
            sequence="2"/>
        <menuitem id="pharmacy_patient_root"
            name="Patients"
            parent="pharmacy_root_menu"
            sequence="3"/>
        <menuitem id="pharmacy_prescription_orders_root"
            name="Prescription"
            parent="pharmacy_root_menu"
            sequence="4"/>
        <menuitem id="pharmacy_medicine_root"
            name="Medicine"
            parent="pharmacy_root_menu"
            sequence="5"/>
        <menuitem id="pharmacy_disease_root"
            name="Disease"
            parent="pharmacy_root_menu"
            sequence="6"/>
        
        <menuitem id="pharmacy_pharmacy"
            name="Pharmacy"
            parent="pharmacy_pharmacy_root"
            action="pharmacy_action"
            sequence="1"/>
        <menuitem id="pharmacy_disease_details"
            name="Disease Details"
            parent="pharmacy_disease_root"
            action="disease_details_action"
            sequence="1"/>
        <menuitem id="disease_categories"
            name="Disease Categories"
            parent="pharmacy_disease_root"
            action="disease_categories_action"
            sequence="2"/>
        <menuitem id="pharmacy_medicine"
            name="Medicine"
            parent="pharmacy_medicine_root"
            action="medicine_action"
            sequence="1"/>
        <menuitem id="pharmacy_patient"
            name="Patient Details"
            parent="pharmacy_patient_root"
            action="patient_action"
            sequence="1"/>
        <menuitem id="clinical_history"
            name="Clinical History"
            parent="pharmacy_patient_root"
            action="clinical_history_action"
            sequence="3"/>
        <menuitem id="prescriptions"
            name="Prescription orders"
            parent="pharmacy_prescription_orders_root"
            action="pharmacy_sale_action"
            sequence="2"/>

</odoo >
