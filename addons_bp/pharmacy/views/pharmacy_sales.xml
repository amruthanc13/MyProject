<?xml version = "1.0" encoding = "utf-8"?>
<odoo >
        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">pharmacy.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="diseases" widget="many2many_tags"/> 
                </field>
                <field name="partner_id"/>
            </field>
        </record>
        
        <record id="medicine_form_inherit" model="ir.ui.view">
            <field name="name">pharmacy.medicine.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="medicine_code"/> 
                </field>
            </field>
        </record>
</odoo >