<?xml version = "1.0" encoding = "utf-8"?>
<odoo >
        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">pharmacy.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="diseases" widget="many2many_tags"/> 
                </field>
            </field>
        </record>
        
        <record id="pharmacy_sale_order_search_form_view" model="ir.ui.view">
            <field name="name">pharmacy.patient.search.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="diseases" string="Diseases"/>
                    <filter string="Diseases" name='diseases_filter' domain="[('diseases','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="medicine_form_inherit" model="ir.ui.view">
            <field name="name">pharmacy.medicine.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="medicine_code"/> 
                </field>
            </field>
        </record>

        <record id="medicine_tree_inherit" model="ir.ui.view">
            <field name="name">pharmacy.medicine.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="medicine_code" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="disease_category_form_view" model="ir.ui.view">
            <field name="name">pharmacy.disease.category.form</field>
            <field name="model">pharmacy.disease.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <label for="name" string="Disease Category name"/>
                            <h1><field name="name" placeholder="e.g. Respiratory diseases"/></h1>
                        </div>
                        <group name="first" col="2">
                            <field name="parent_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="disease_category_tree_view" model="ir.ui.view">
            <field name="name">pharmacy.disease.category.tree</field>
            <field name="model">pharmacy.disease.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="complete_name" string="Disease Category"/>
                </tree>
            </field>
        </record>
</odoo >
